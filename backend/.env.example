# Backend Environment Configuration for DigitalOcean App Platform
# Copy this file to .env and fill in your production values

# Application Settings
NODE_ENV=production
PORT=8080
APP_NAME=Finance Dashboard Backend

# Database Configuration
# For SQLite (default - works well for small to medium apps):
DB_TYPE=sqlite
SQLITE_PATH=./data/finance_dashboard.db

# For PostgreSQL (if using DigitalOcean Managed Database):
# DB_HOST=your-db-host.db.ondigitalocean.com
# DB_PORT=25060
# DB_NAME=defaultdb
# DB_USERNAME=your-db-user
# DB_PASSWORD=your-db-password
# DB_SSL=true

# Security & Encryption - CHANGE ALL VALUES IN PRODUCTION
JWT_SECRET=your-jwt-secret-key-change-in-production-use-strong-random-string
ENCRYPTION_KEY=your-super-secure-32-char-key-here-12345
API_SECRET_KEY=your-api-secret-key-for-external-integrations

# Security Settings
ENCRYPT_DATABASE_FIELDS=true
ENCRYPT_API_COMMUNICATION=false
SECURITY_LEVEL=production
ENABLE_REQUEST_ENCRYPTION=false
ENABLE_JWT_ENCRYPTION=false
ENABLE_DATABASE_FIELD_ENCRYPTION=true
ENABLE_API_LOGGING=true
ENABLE_SECURITY_HEADERS=true

# CORS Settings
FRONTEND_URL=https://your-frontend-app.ondigitalocean.app
ALLOWED_ORIGINS=https://your-frontend-app.ondigitalocean.app,https://your-domain.com

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,xls,json

# AI/ML Services (if using external APIs)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_SECRET=your-session-secret-key-change-in-production

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# Logging
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# Backup Settings (for DigitalOcean Spaces)
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=your-backup-bucket
