# Production Environment Variables for Render.com
NODE_ENV=production
PORT=8080

# Database Configuration (SQLite for simplicity on Render)
DB_TYPE=sqlite
SQLITE_PATH=./data/finance_dashboard.db

# Security Keys (Render will generate these)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
API_SECRET_KEY=${API_SECRET_KEY}

# Security Settings
ENCRYPT_DATABASE_FIELDS=true
ENCRYPT_API_COMMUNICATION=false
SECURITY_LEVEL=production
ENABLE_REQUEST_ENCRYPTION=false
ENABLE_JWT_ENCRYPTION=false
ENABLE_DATABASE_FIELD_ENCRYPTION=true
ENABLE_API_LOGGING=false
ENABLE_SECURITY_HEADERS=true

# CORS Settings (Render will provide the URL)
FRONTEND_URL=${RENDER_EXTERNAL_URL}
ALLOWED_ORIGINS=${RENDER_EXTERNAL_URL}

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,xls,json

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# MongoDB connection for authentication
MONGODB_URI=${MONGODB_URI}