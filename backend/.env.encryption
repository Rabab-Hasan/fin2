# Encryption Configuration
# In production, use strong random keys and store them securely

# Backend encryption key - CHANGE THIS IN PRODUCTION
ENCRYPTION_KEY=your-super-secure-32-char-key-here-12345

# JWT Secret - CHANGE THIS IN PRODUCTION  
JWT_SECRET=your-jwt-secret-key-change-in-production

# Database encryption for sensitive fields
ENCRYPT_DATABASE_FIELDS=true

# API request/response encryption
ENCRYPT_API_COMMUNICATION=false

# Frontend encryption key (different from backend)
REACT_APP_ENCRYPTION_KEY=frontend-encryption-key-32-chars-long

# Security levels
SECURITY_LEVEL=development

# Additional security settings
ENABLE_REQUEST_ENCRYPTION=false
ENABLE_JWT_ENCRYPTION=false
ENABLE_DATABASE_FIELD_ENCRYPTION=true
ENABLE_API_LOGGING=true
ENABLE_SECURITY_HEADERS=true